<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoctorApp1.Views.LoginPage"
             Padding="0"
             BackgroundColor="#f3f4fb"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <ScrollView>
            <StackLayout VerticalOptions="Start" Padding="0" Spacing="0">
                <!-- Header -->
                <StackLayout Margin="0,12,0,22" HorizontalOptions="Center" Spacing="10">
                    <Image Source="logo.png" HeightRequest="54" WidthRequest="54" Margin="0,0,0,6"/>
                    <Label Text="Med Helper"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0"/>
                </StackLayout>

                <!-- Login card -->
                <Border
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="0"
                    BackgroundColor="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    WidthRequest="450"
                    HeightRequest="360"
                    Padding="32,0">

                    <!-- Remove WidthRequest here -->
                    <Grid HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        BackgroundColor="White"
                        Padding="0"
                        Margin="0"
                        StyleClass="LoginCard">

                        <StackLayout Spacing="20" VerticalOptions="FillAndExpand">
                            <Label Text="Login"
                               FontSize="34"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"
                               Margin="0,24,0,6"/>
                            <Entry x:Name="EmailEntry"
                               Placeholder="Email"
                               Keyboard="Email"
                               FontSize="17"
                               BackgroundColor="#FFFFFF"
                               TextColor="#222"
                               HeightRequest="46"
                               Margin="0"
                                   
                               PlaceholderColor="#A0A0A0"/>
                            <Entry x:Name="PasswordEntry"
                               Placeholder="Password"
                               IsPassword="True"
                               FontSize="17"
                               BackgroundColor="#FFFFFF"
                               TextColor="#222"
                               HeightRequest="46"
                               Margin="0"
                               PlaceholderColor="#A0A0A0"/>

                            <!-- Forgot Password link -->
                            <Label Text="Forgot password?"
                               FontSize="15"
                               TextColor="#1976D2"
                               HorizontalOptions="End"
                               Margin="0,0,4,0">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnForgotPasswordTapped"/>
                                </Label.GestureRecognizers>
                            </Label>

                            <Button Text="Login"
                                Clicked="OnLoginClicked"
                                BackgroundColor="#4DD0E1"
                                TextColor="White"
                                CornerRadius="8"
                                FontAttributes="Bold"
                                FontSize="17"
                                HeightRequest="46"
                                Margin="0,2,0,0"/>
                        </StackLayout>
                    </Grid>
                </Border>

                <!-- Register link -->
                <StackLayout Spacing="0" Margin="0,10,0,0" HorizontalOptions="Center">
                    <Label Text="Not registered?"
                           FontSize="15"
                           TextColor="#222"
                           HorizontalOptions="Center"/>
                    <Label Text="Create an Account"
                           FontSize="15"
                           TextColor="#1976D2"
                           HorizontalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegisterClicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>