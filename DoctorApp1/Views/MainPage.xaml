<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoctorApp1.MainPage"
             BackgroundColor="#f3f4fb"
             NavigationPage.HasNavigationBar="False">

    <Grid Padding="28" Margin="0"
          VerticalOptions="Start" HorizontalOptions="Center"
          RowDefinitions="Auto,Auto,Auto,Auto,*"
          ColumnDefinitions="*,Auto,Auto"
          BackgroundColor="#f3f4fb">

        <!-- User Dashboard button (left of logout) -->
        <Button 
            x:Name="UserButton"
            Text="User"
            WidthRequest="100"
            HeightRequest="36"
            FontSize="16"
            BackgroundColor="#FAFBFF"
            TextColor="#1A1A1A"
            CornerRadius="6"
            BorderColor="#D0D0D0"
            BorderWidth="1"
            VerticalOptions="Start"
            HorizontalOptions="End"
            Margin="0,10,4,8"
            Clicked="OnUserDashboardClicked"
            Grid.Row="0" Grid.Column="1"/>

        <!-- Logout button top right -->
        <Button 
            x:Name="LogoutButton"
            Text="Log out"
            WidthRequest="100"
            HeightRequest="36"
            FontSize="16"
            BackgroundColor="#FAFBFF"
            TextColor="#1A1A1A"
            CornerRadius="6"
            BorderColor="#D0D0D0"
            BorderWidth="1"
            VerticalOptions="Start"
            HorizontalOptions="End"
            Margin="0,10,10,8"
            Clicked="OnLogoutClicked"
            Grid.Row="0" Grid.Column="2"/>

        <!-- Welcome header -->
        <Label
            Text="Welcome to the Doctor App"
            FontAttributes="Bold"
            FontSize="54"
            HorizontalTextAlignment="Center"
            TextColor="#1A1A1A"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0,24,0,0"/>

        <!-- Search and buttons row with padding -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Padding="50,0,50,0" Margin="0,32,0,0"
              ColumnDefinitions="0.55*,Auto,Auto"
              WidthRequest="820">

            <Border Stroke="#D0D0D0"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 6"
                HeightRequest="48"
                VerticalOptions="Center"
                Margin="0,0,8,0"
                BackgroundColor="#FFFFFF">
                <Grid Padding="0">
                    <Entry
                        x:Name="SearchEntry"
                        Placeholder="Search patients"
                        FontSize="16"
                        PlaceholderColor="#4DD0E1"
                        Margin="10,0"
                        HorizontalTextAlignment="Start"
                        VerticalOptions="Center"
                        TextChanged="OnSearchTextChanged"
                        BackgroundColor="Transparent"
                        Grid.Column="0" />
                </Grid>
            </Border>



            <Button
                x:Name="AddPatientButton"
                Text="Add Patient"
                BackgroundColor="#4DD0E1"
                TextColor="White"
                FontSize="16"
                CornerRadius="6"
                WidthRequest="170"
                HeightRequest="40"
                VerticalOptions="Center"
                Clicked="OnAddPatientClicked"
                Grid.Column="1"
                Margin="0,0,8,0"/>

            <Button
                x:Name="CalendarButton"
                Text="Open Calendar"
                BackgroundColor="#4DD0E1"
                TextColor="White"
                FontSize="16"
                CornerRadius="6"
                WidthRequest="170"
                HeightRequest="40"
                VerticalOptions="Center"
                Clicked="OnOpenCalendarClicked"
                Grid.Column="2"/>
        </Grid>

        <!-- Headers for patient list -->
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
              ColumnDefinitions="*,Auto"
              WidthRequest="720">

            <Label
                Text="Patients"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="#1A1A1A"
                VerticalOptions="Center"
                Padding="12,0"/>

            <Label
                Text="Contact info"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="#1A1A1A"
                VerticalOptions="Center"
                HorizontalOptions="End"
                Padding="0,0,6,0"
                Margin="-6,0,0,0"
                Grid.Column="1"/>
        </Grid>

        <!-- Patients list -->
        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
              ColumnDefinitions="*,Auto"
              WidthRequest="820">
            <ListView
                x:Name="PatientsList"
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="50,8,50,0"
                ItemsSource="{Binding Patients}"
                HeightRequest="260"
                SeparatorVisibility="None"
                HasUnevenRows="True"
                ItemSelected="OnPatientSelected"
                BackgroundColor="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Border
                                Margin="0,0,0,8"
                                Padding="0"
                                Stroke="#D0D0D0"
                                StrokeThickness="1"
                                BackgroundColor="#FFFFFF"
                                HeightRequest="44"
                                VerticalOptions="Center"
                                StrokeShape="RoundRectangle 6">
                                <Grid
                                    ColumnDefinitions="*,Auto"
                                    Padding="12,0"
                                    VerticalOptions="Center">

                                    <Label Text="{Binding FullName}" 
                                           FontSize="16"
                                           TextColor="#1A1A1A"
                                           VerticalOptions="Center" />

                                    <Label Text="{Binding ContactInfo}"
                                           FontSize="16"
                                           TextColor="#1A1A1A"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End"
                                           Margin="-6,0,0,0"
                                           Grid.Column="1" />
                                </Grid>
                            </Border>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

    </Grid>
</ContentPage>