<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoctorApp1.Views.NewPasswordPage"
             Padding="0"
             BackgroundColor="#f3f4fb"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <ScrollView>
            <StackLayout VerticalOptions="Start" Padding="0" Spacing="0">
                <!-- Header -->
                <StackLayout Margin="0,12,0,22" HorizontalOptions="Center" Spacing="10">
                    <Image Source="logo.png" HeightRequest="54" WidthRequest="54" Margin="0,0,0,6"/>
                    <Label Text="Med Helper"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0"/>
                </StackLayout>

                <!-- New Password card -->
                <Border
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="0"
                    BackgroundColor="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    WidthRequest="450"
                    HeightRequest="310"
                    Padding="32,0">

                    <Grid HorizontalOptions="FillAndExpand"
                          VerticalOptions="FillAndExpand"
                          BackgroundColor="White"
                          Padding="0"
                          Margin="0"
                          StyleClass="NewPasswordCard">

                        <StackLayout Spacing="20" VerticalOptions="FillAndExpand">
                            <Label Text="Enter New Password"
                                   FontSize="34"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                   HorizontalOptions="Center"
                                   Margin="0,24,0,6"/>
                            <Entry x:Name="NewPasswordEntry"
                                   Placeholder="New Password"
                                   IsPassword="True"
                                   FontSize="17"
                                   BackgroundColor="#F7FAFA"
                                   TextColor="#222"
                                   HeightRequest="46"
                                   Margin="0"
                                   PlaceholderColor="#A0A0A0"/>
                            <Entry x:Name="ConfirmPasswordEntry"
                                   Placeholder="Confirm Password"
                                   IsPassword="True"
                                   FontSize="17"
                                   BackgroundColor="#F7FAFA"
                                   TextColor="#222"
                                   HeightRequest="46"
                                   Margin="0"
                                   PlaceholderColor="#A0A0A0"/>
                            <Button Text="Reset Password"
                                    Clicked="OnResetPasswordClicked"
                                    BackgroundColor="#4DD0E1"
                                    TextColor="White"
                                    CornerRadius="8"
                                    FontAttributes="Bold"
                                    FontSize="17"
                                    HeightRequest="46"
                                    Margin="0,2,0,0"/>
                        </StackLayout>
                    </Grid>
                </Border>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>